@using System.Web.Mvc.Html
@using AttendanceSystem.Models

@{
    ViewBag.Title = "Create Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<br />

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Create", "Branch"))
        {
            <div class="row">
                <div class="col-md-2">
                    <label>Branch Name</label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" type="text" name="Name" required="">
                </div>
            </div>
        
            <div class="row">
                <div class="col-md-2">
                    <label>FullAddress</label>
                </div>
                <div class="col-md-4">
                    <input class="form-control" type="text" name="FullAddress" required="">
                </div>
            </div>

            <input class="btn btn-success" type="submit" value="Submit">
            <a class="btn btn-info" href="/Branch/Index">Cancel</a>

        }
    </div>
</div>
