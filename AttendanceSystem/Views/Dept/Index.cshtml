@model System.Collections.Generic.List<AttendanceSystem.Models.Department>

@{
    ViewBag.Title = "Department List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Department List</h2>

<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var department in Model)
    {
        <tr>
            <td>@department.Name</td>
            <td>@department.Description</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = department.Id })|
                @Html.ActionLink("Edit", "Edit", new { id = department.Id })|
                @Html.ActionLink("Delete", "Delete", "Dept", new { id = department.Id },
                 new { onclick = "return confirm('Are you sure you want to delete this department?')" })
            </td>
        </tr>
    }
</table>
<a class="btn btn-info" href="/Dept/Create">Create Department</a>
<h3 class="red">@ViewBag.Message</h3>